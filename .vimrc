set nocompatible

syntax on
execute pathogen#infect()
filetype plugin indent on

set tabstop=2
set shiftwidth=2
set softtabstop=2
set smarttab
set expandtab
" smart & autoindent
set ai
set si

set number
set numberwidth=2

set autoread
set history=600

set ruler
set hlsearch
set magic
set incsearch
set ignorecase
set smartcase
set lazyredraw

set backspace=eol,start,indent

set backup
set directory=~/.vim/tmp
set backupdir=~/.vim/backup

